{
  "name": "@dreamer/plugin",
  "version": "1.0.0",
  "license": "MIT",
  "exports": {
    ".": "./src/mod.ts"
  },
  "publish": {
    "include": [
      "src/**/*.ts",
      "LICENSE.md",
      "README.md"
    ],
    "exclude": [
      "**/*.test.ts",
      "**/*.spec.ts",
      "**/test/**",
      "**/tests/**"
    ]
  },
  "lint": {
    "include": [
      "src/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-explicit-any"
      ]
    }
  },
  "imports": {
    "@dreamer/service": "jsr:@dreamer/service@^1.0.0-beta.4",
    "@dreamer/runtime-adapter": "jsr:@dreamer/runtime-adapter@^1.0.0",
    "@dreamer/test": "jsr:@dreamer/test@^1.0.0"
  },
  "nodeModulesDir": "auto"
}
